<div class="container p-4">
    <div class="row">
        {{#each events}}
        <div class="col-md-3 mb-3">
            <div class="card text-center">
                <div class="card-body">
                   <div class="card-graphic mb-5"><img src="/images/events.png" alt=""></div>
                    <p class="m-2"> Evento #{{Cod_Evento}}</p>
                    <p class="text-muted">
                        {{Nombre_Cliente}}
                    </p>
                   <p class="text-muted">
                  {{Fecha_Evento}}
                    </p>
              
                    <a class="btn btn-info" href="/links/showEventDetails/{{Cod_Evento}}">
                        Ver Evento
                    </a>
                
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center p-4">
            <p>No hay eventos registrados</p>
                <a class="card-button mt-5 btn btn-info" href="/links/addEvents">
                        Crear nuevo
                    </a>
            </div>
        </div>
        {{/each}}
    </div>
</div>