<div class="division-container p-4">

  <div class="row">
    <div class="col-12 col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h4><i class="fas fa-truck-loading mr-2"></i>Nuevo Producto</h4>
        </div>
        <div class="card-body">
          <form onclick="return  validateForm()" action="/links/addProducts" method="POST">
            <div class="col-12">
              <div class="row">
                <div class="col-12 ">
                  <div class="form-group">
                    <input id="Cod_Producto" name="Cod_Producto" type="text" class="form-control"
                      placeholder="Codigo Prodcuto *" value="" />
                  </div>
                  <div class="form-group">
                    <input id="Nombre_Producto" name="Nombre_Producto" type="text" class="form-control"
                      placeholder="Nombre Prodcuto*" value="" />
                  </div>
                  <div class="form-group">
                    <input id="Precio_Producto" name="Precio_Producto" type="text" class="form-control"
                      placeholder="Precio Prodcuto *" value="" />
                  </div>


                  <div class="form-group">
                    <select id="Cod_Categoria" name="Cod_Categoria" class="form-control" id="Cod_Categoria">
                      <option disabled selected>Categoria</option>
                      {{#each categoria}}
                      <option value="{{Cod_Categoria}}">{{Nombre_Categoria}}</option>
                      {{/each}}
                    </select>
                  </div>


                  <div class="form-group">
                    <input id="Descripcion" name="Descripcion" type="text" class="form-control"
                      placeholder="Detalle Producto *" value="" />
                  </div>

                  <button type="submit" class="btnRegister btn btn-outline-info"><i
                      class="fas fa-plus mr-2"></i>Registrar</button>
                </div>
              </div>
            </div>




        </div>




      </div>


      </form>
    </div>
  </div>
</div>


</div>