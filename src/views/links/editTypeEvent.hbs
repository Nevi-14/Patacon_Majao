<div class="division-container p-4">

    <div class="row mt-5">
        <div class="col-12   mx-auto">
            <main class="grid" role="main">
                <div class="card">
                    <div class="card-graphic"><img src="/images/events.png" alt=""></div>
                    <h1 class="card-title">Editar Tipo EVento</h1>
                    <form onclick="return addEvent()" action="/links/editTypeEvent/{{events.Cod_Tipo_Evento}}"
                        method="POST">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">

                                    <input id="Cod_Tipo_Evento" type="text" value="{{events.Cod_Tipo_Evento}}"
                                        name="Cod_Tipo_Evento" placeholder="Codigo Rol*" class="form-control" disabled>
                                </div>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-12">
                                <div class="form-group">

                                    <input id="Nombre_Tipo_Evento" type="text" name="Nombre_Tipo_Evento"
