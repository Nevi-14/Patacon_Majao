<div class="division-container p-4">

    <div class="row mt-5">
        <div class="col-12   mx-auto">
            <main class="grid" role="main">
                <div class="card">
                    <div class="card-graphic"><img src="/images/categories.png" alt=""></div>
                    <h1 class="card-title">Editar Categoria</h1>
                    <form onclick="return addCategory()" action="/links/editCategory/{{category.Cod_Categoria}}"
                        method="POST">
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">

                                    <input id="Cod_Categoria" type="text" value="{{category.Cod_Categoria}}"
                                        name="Cod_Categoria" placeholder="Codigo Rol*" class="form-control" disabled>
                                </div>
                            </div>

                        </div>
                        <div class="row">

                            <div class="col-12">
                                <div class="form-group">

                                    <input id="Nombre_Categoria" type="text" name="Nombre_Categoria"
                                        value="{{category.Nombre_Categoria}}" placeholder="Descripcion Rol*"
                                        class="form-control">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <button type="submit" class="card-button btn ">Guardar</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>




            </main>

        </div>







    </div>


</div>